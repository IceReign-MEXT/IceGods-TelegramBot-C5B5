# ==============================
# Telegram
# ==============================
# Your bot token from @BotFather
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
# Your Telegram user ID (admin)
TELEGRAM_ADMIN_ID=YOUR_TELEGRAM_ADMIN_ID_HERE

# ==============================
# Wallets
# ==============================
# Ethereum main wallet address (private key should NOT go here)
ETH_MAIN_WALLET=YOUR_ETH_WALLET_ADDRESS_HERE
# Solana main wallet address
SOL_MAIN_WALLET=YOUR_SOL_WALLET_ADDRESS_HERE

# Optional backup wallets (leave empty if not needed)
ETH_BACKUP_WALLET=
SOL_BACKUP_WALLET=

# ==============================
# APIs
# ==============================
# CoinMarketCap API key (optional, for price lookups)
CMC_API_KEY=YOUR_CMC_API_KEY_HERE
# Etherscan API key (optional, for ETH tx tracking)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY_HERE
# Infura project ID (optional, for ETH RPC)
INFURA_API_KEY=YOUR_INFURA_API_KEY_HERE

# ==============================
# Database
# ==============================
# Path to SQLite database
DATABASE_PATH=subscriptions.db

# ==============================
# General / Server
# ==============================
# Language / locale
LANG=en
# Port number for Flask app
PORT=5000